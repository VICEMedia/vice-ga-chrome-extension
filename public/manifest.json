{
	"name": "VICE GA and Segment Debugger",
	"version": "2.1",
	"description": "Analyzes Google Analytics and Segment network calls.",
	"manifest_version": 2,
	"author": "George Jeng - VICE TECH",
	"icons": { "128": "images/icon.png"},
	"background": {
  	"scripts": ["background.js"],
  	"persistent": true
	},
	"browser_action": {
		"default_popup": "index.html",
		"default_icon": "images/grey_icon.png"
	},
	"permissions": [
		"storage",
		"tabs",
		"webRequest",
		"*://*.google-analytics.com/",
		"*://*.segment.io/"
	],
  "options_page": "options.html"
}
